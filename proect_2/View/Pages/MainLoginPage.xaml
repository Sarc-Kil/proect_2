<Page x:Class="proect_2.View.Pages.MainLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:gif="http://wpfanimatedgif.codeplex.com"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:proect_2.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" 
      d:DesignWidth="800"
      FontFamily="Ink Free">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Практическая работа №3. Разработка овторизации Без использования Тимофея"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   FontWeight="SemiBold"
                   Foreground="#7fffd4"
                   FontSize="28"
                   Margin="5"/>
        <Border Background="#AAF0D1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="300"
                Height="200"
                CornerRadius="25"
                Effect="{StaticResource MaterialDesignElevationShadow16}">
            <Grid>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Person"
                                                 Margin="0 15 3 0 "
                                                 Foreground="#30D5C8"/>
                        <TextBox Width="120"
                                 x:Name="TbLogin"
                                  FontSize="15"
                                 Foreground="#30D5C8"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 FontFamily="Georgia"
                                 materialDesign:HintAssist.Hint="Логин"
                                 materialDesign:HintAssist.Foreground="#30D5C8"
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#30D5C8"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0 5 0 0">
                        <materialDesign:PackIcon Kind="Key"
                                                 Margin="0 15 3 0"
                                                 Foreground="#30D5C8"/>
                        <PasswordBox Width="120"
                                 FontSize="15"
                                     FontFamily="Georgia"
                                 x:Name="PbPassword"
                                 Foreground="#30D5C8"
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 materialDesign:HintAssist.Hint="Пароль"
                                 materialDesign:HintAssist.Foreground="#30D5C8"
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#30D5C8"/>

                    </StackPanel>

                    <Button Margin="0 20 0 0"
                            Background="Transparent"
                            Foreground="#30D5C8"
                            BorderBrush="#30D5C8"
                            x:Name="BtnLogin"
                            Click="BtnLogin_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonProgressAssist.IndicatorForeground="#30D5C8"
                            materialDesign:ButtonProgressAssist.IndicatorBackground="Transparent"
                            materialDesign:ButtonProgressAssist.Value="1"
                            materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                            materialDesign:ButtonProgressAssist.IsIndeterminate="True">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="LoginVariant"
                                                     Margin="0 2 3 0"/>
                            <TextBlock Text="Войти"
                                       FontFamily="Georgia"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0 0 0 100">
            <TextBlock Text="ИЛИ"
                       FontFamily="Georgia"
                       FontSize="20"
                       Foreground="#30D5C8"
                       TextAlignment="Center"/>
            <Button Background="Transparent"
                    Foreground="#30D5C8"
                    BorderBrush="Transparent"
                    x:Name="BtnRegistration"
                    Click="BtnRegistration_Click">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Register"
                                             Margin="0 2 3 0"/>
                    <TextBlock Text="Пройти регистрацию"
                               FontSize="18"
                               FontFamily="Georgia"
                               TextDecorations="Underline"/>

                </StackPanel>
            </Button>
        </StackPanel>
        <Image Source="/Images/б.png"
               Stretch="UniformToFill"
               Grid.Column="1"
               />

        <Image gif:ImageBehavior.AnimatedSource= "/Images/diamond.gif" Margin="178,520,178,44" />

    </Grid>
</Page>
